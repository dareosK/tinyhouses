<div class="container">
  <h1><%= @tinyhouse.title %></h1>
  <div class="photo-grid">
    <% @tinyhouse.photos.each_with_index do |photo, idx| %>
      <div class="photo-<%= idx + 1 %>" style="background-image:url(<%= cl_image_path(photo.key, crop: 'fill') %>)">
      </div>
    <% end %>
  </div>
  <div class="row">
    <div class="show-left-part col-7">
      <div class="hosted-by-heading">
        <h4>This Tinyhouse is hosted by <%= @tinyhouse.user.username %></h4>
      </div>
      <div class="bordertop"></div>
      <div class="overview-section">
        <h4><i class="fas fa-key"></i>Great check-in experience</h4>
        <p>100% of recent guests gave the check-in process a 5-star rating</p>
        <h4><i class="fas fa-wifi"></i>Ameneties for everyday living</h4>
        <p>The host has equipped this place for long stays - wifi, free parking, and heating included.</p>
        <h4><i class="far fa-calendar-alt"></i>Cancellation policy</h4>
        <p>Cancel before 5:00 PM a day before and get a full refund, minus the service fee</p>
      </div>
      <div class="bordertop"></div>
      <p class="description"><%= @tinyhouse.description %></p>
      <div class="bordertop"></div>
      <div class="amenities amenities-grid">
        <% @amenities.each do |a| %>
            <p><%= image_tag("#{a}.svg")%><%= a %></p>
        <% end %>
      </div>
      <div class="bordertop"></div>
    </div>
    <div class="show-right-part col-5">
      <div class="show-form">
        <p id="price-tag"><strong>â‚¬<%= @tinyhouse.price_per_day %></strong>/night</p>
        <div class="widget-content" data-unavailable="<%= @tinyhouse.unavailable_dates.to_json %>">
            <%# if current_user.id != @tinyhouse.user_id  %>
            <%= simple_form_for([@tinyhouse, @trip]) do |f| %>
              <%= f.input :check_in, as: :string, label: "Dates", placeholder: "From", wrapper_html: { class: "inline_field_wrapper" } %>
              <%= f.input :check_out, as: :string, label: '&nbsp;'.html_safe, placeholder: "To", disabled: true, wrapper_html: { class: "inline_field_wrapper" } %>
              <%= f.submit "book", class: "primary-button" %>
            <% end %>
            <%# end %>
         </div>
       <!--   <div id="root" data-unavailable="<%#= @tinyhouse.unavailable_dates.to_json %>"></div>
         <%#= javascript_pack_tag 'datepicker', {prerender: true} %> -->
      </div>
    </div>
  </div>
</div>
