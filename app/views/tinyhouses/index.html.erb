<div class="index-flex">
  <div class="index-cards">
  <% @tinyhouses.each do |tinyhouse| %>
    <div class="index-card">
      <div class="card-flexbox d-flex align-items-center">


      <div id="carouselExampleSlidesOnly" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner carousel-custom-styles">
          <% tinyhouse.photos.each_with_index do |photo, index|%>
          <div class="carousel-item <%= "active" if index == 0 %>">
            <%= cl_image_tag photo.key, width: '150', crop: 'fit', class: "d-block w-100 test" %>
          </div>
        <% end %>
      </div>
    </div>
    <div class="card-text">
      <h4><%= tinyhouse.title %></h4>
      <p><%= tinyhouse.location %></p>
      <p><%= tinyhouse.price_per_day %>â‚¬ / night</p>
    </div>
  </div>
  </div>
  <% end %>


  </div>
</div>

